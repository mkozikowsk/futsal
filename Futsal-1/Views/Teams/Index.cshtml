@model IEnumerable<Futsal_1.Models.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coach.FullName)
        </th>

        <th></th>
    </tr>
   
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.ActionLink(item.Coach.FullName, "../Coaches/Details", new { id = item.Coach.Id })
        </td>
        <td>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @style = "color: red" })
            @Html.ActionLink("Edit |", "Edit", new {id = item.Id}) 
            @Html.ActionLink("Details |", "Details", new {id = item.Id}) 
            @Html.ActionLink("Delete", "Index", new {id = item.Id}) @*, new { onclick = "return confirm('Jesteś pewien?');" }*@
        }
           
        </td>
    </tr>
}

</table>
